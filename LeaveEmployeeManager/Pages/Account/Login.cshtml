@page
@model LeaveEmployeeManager.Pages.Account.LoginModel
@{
}


<div class="container">
    <div class="container mt-5 d-flex justify-content-center ">
        @if (!ModelState.IsValid)
        {
            <div asp-validation-summary=All class="alert-danger w-25 shadow-lg bg-gradient list-group p-4 opacity-75 text-center h4"
             style="min-width:40%;">
                <div class="m-auto mb-3"><i class="bi bi-exclamation-diamond border-bottom" style="font-size:4rem;"></i></div>

            </div>
        }
    </div>
    <div class="card w-50 m-auto shadow">
        <div class="card-header d-flex justify-content-between">
            <h1>Log In</h1>
            <i class="bi bi-shield-lock text-secondary" style="font-size:2.2rem;"></i>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <input asp-for="ReturnUrl" class="form-control" type="hidden" />
                    <label asp-for="Input.Mail"></label>
                    <input asp-for="Input.Mail" class="form-control" />
                    <span asp-validation-for="Input.Mail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.RememberMe"> </label>
                    <input asp-for="Input.RememberMe" class="form-check" />


                </div>
                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-secondary">Log in</button>
                    <a asp-page="Register" class="btn btn-primary">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}