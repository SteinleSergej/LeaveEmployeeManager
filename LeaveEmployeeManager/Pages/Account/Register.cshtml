@page
@model LeaveEmployeeManager.Pages.Account.RegisterModel
@{
}
<div class="container">
    <div class="container mt-5 d-flex justify-content-center ">
        @if (!ModelState.IsValid)
        {
            <div asp-validation-summary=All class="alert-danger w-25 shadow-lg bg-gradient list-group p-4 opacity-75 text-center h4"
             style="min-width:40%;">
                <div class="m-auto mb-3"><i class="bi bi-exclamation-diamond border-bottom" style="font-size:4rem;"></i></div>

            </div>
        }
    </div>
    <div class="card w-50 m-auto shadow">
        <div class="card-header d-flex justify-content-between">
            <h1>Register</h1>
            <i class="bi bi-shield-lock text-secondary" style="font-size:2.2rem;"></i>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">   
                    <label asp-for="User.FirstName"></label>
                    <input asp-for="User.FirstName" class="form-control" />
                    <span asp-validation-for="User.FirstName"></span>
                </div>
                <div class="form-group">   
                    <label asp-for="User.LastName"></label>
                    <input asp-for="User.LastName" class="form-control" />
                    <span asp-validation-for="User.LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Email"></label>
                    <input asp-for="User.Email" class="form-control" />
                    <span asp-validation-for="User.Email"></span>
                </div>
                <div class="form-group">
                    <label>Confirm Email</label>
                    <input asp-for="ValidEmail" class="form-control" />
                    <span asp-validation-for="ValidEmail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Password"></label>
                    <input asp-for="User.Password" class="form-control" />
                    <span asp-validation-for="User.Password"></span>
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input asp-for="ValidPassword" class="form-control" />
                    <span asp-validation-for="ValidPassword"></span>
                </div>
                <div class="form-group">
                    <label>Department</label>
                    <select asp-for="User.Role" asp-items="@Model.RoleList" class="form-select">
                        
                    </select>
                    <span asp-validation-for="User.Role"></span>
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-secondary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}