@page
@model LeaveEmployeeManager.Pages.LeaveTypes.CreateModel
@{
}
<div class="container bg-light p-5 shadow">
    <h1 class="mb-3">Create A New <span class="badge bg-secondary">Leave Type</span></h1>
    <form method="post">
        <div class="input-group mb-3 w-75">
            <div class="input-group-prepend" >
               <button class="btn btn-outline-secondary disabled"><i class="bi bi-body-text" ></i></button>
            </div>
            <input asp-for="LeaveType!.Name" class="form-control" placeholder="Leave Type Name"/>       
        </div>
        <div class="input-group mb-3 w-75">
            <div class="input-group-prepend" >
               <button class="btn btn-outline-secondary disabled"><i class="bi bi-body-text" ></i></button>
            </div>
            <input asp-for="LeaveType!.DefaultDays" class="form-control" placeholder="Default Days"/>       
        </div>
        <button type="submit" class="btn btn-danger">Create</button>
    </form>
</div>

<div class="container mt-5 d-flex justify-content-center ">
    @if (!ModelState.IsValid)
    {
            <div asp-validation-summary=All  class="alert-danger w-25 shadow-lg bg-gradient list-group p-4 opacity-75 text-center h4" 
            style="min-width:40%;">
        <div class="m-auto mb-3"><i class="bi bi-exclamation-diamond border-bottom" style="font-size:4rem;"></i></div>

    </div>
    }
</div>
